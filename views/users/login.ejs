<% layout("/layouts/boilerplate") %>

<div class="bg-gray-200 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow-md w-96">
        <h2 class="text-2xl font-bold mb-4 flex items-center justify-center">Login</h2>
        <form action="/login" method="post" id="newSignup" novalidate  >
            <div class="mb-4">
                <label for="username" class="block text-gray-700 font-bold mb-2">Username</label>
                <input type="text" id="username" name="username" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" 
                placeholder="your name" required>
                <p id="username-error" class="text-red-500 text-xs mt-1 hidden">Plz Enter Username<i class="fa-solid fa-circle-exclamation"></i>.</p>
              <p id="username-success" class="text-green-500 text-xs hidden mt-1 ">Good Job <i class="fa-solid fa-circle-check"></i> </p>
            </div>
            
            <div class="mb-4">
                <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
                <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Your Password" required>
                <p id="password-error" class="text-red-500 text-xs mt-1 hidden">Plz. Enter password <i class="fa-solid fa-circle-exclamation"></i>.</p>
              <p id="password-success" class="text-green-500 text-xs hidden mt-1 ">Good Job <i class="fa-solid fa-circle-check"></i>  .</p>
            </div>
            
            <button type="submit" class="w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition duration-200">Login</button>
        </form>
        <br>
        <div class=" justify-center flex ">
          New To Rental? <strong><a href="/signup"  class="hover:underline text-blue-500">Sign up now</a></strong>
        </div>
    </div>
</div>

